<div class="container">
    <div class="row">
        <img src="https://chefimages.s3-us-west-2.amazonaws.com/{{image_name}}.jpg" width="310" height="310" alt="Chef profile pic"
                style="border-radius: 50%;">
        <div class="col" style="margin:40px">
            <h1>{{first_name}}</h1>
            <p>{{chef_description}}</p>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card-body">
            <div class="row" id="dish">
                {{#each cuisines as |cuisine|}}
                    {{#each dishes as |dish|}}
                        <img src="../assets/taco.png" alt="dish#2" style="width:200px;height:200px; border-radius:50%;">
                        <div class="col" style="margin-left:5px">
                            <h4>{{dish.dish_name}}</h4>
                            <p>{{dish.dish_description}}</p>
                            <class="form-check-input">
                                <b>Contains: </b>
                            </class>
                            <div class="row toCart">
                                <button type="button" class="btn btn-dark">Add to
                                    Cart</button>
                            </div>
                        </div>
                    {{/each}}
                {{/each}}
            </div>
        </div>
    </div>
</div>