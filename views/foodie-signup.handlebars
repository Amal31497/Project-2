<div class="container">
    <div class="row" id="foodies"></div>
    <h2>FOODIE SIGN UP</h2>
</div>


<div class="container">
    <form class="signup-form">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Email *</label>
                <input type="email" class="form-control" id="foodieEmail" placeholder="Email">
            </div>
            <div class="form-group col-md-6">
                <label>Password *</label>
                <input type="password" class="form-control" id="foodiePassword" placeholder="Password">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label>First Name *</label>
                <input type="text" class="form-control" id="foodieFirstName" placeholder="First Name">
            </div>
            <div class="form-group col-md-6">
                <label>Last Name</label>
                <input type="text" class="form-control" id="foodieLastName" placeholder="Last Name">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Phone Number *</label>
                <input type="text" class="form-control" id="foodiePhone" placeholder="Phone Number">
            </div>
            <div class="form-group col-md-6">
                <label>Street Address *</label>
                <input type="text" class="form-control" id="foodieStreet" placeholder="Street Address">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label>City *</label>
                <input type="text" class="form-control" id="foodieCity" placeholder="City">
            </div>
            <div class="form-group col-md-6">
                <label>State *</label>
                <input type="text" class="form-control" id="foodieState" placeholder="State">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Zipcode *</label>
                <input type="text" class="form-control" id="foodieZipcode" placeholder="Zipcode">
            </div>
        </div>


        <button type="submit" class="btn btn-dark">Sign Up</button>
    </form>

    <br></br>
    <p class="form_text">
        <a href="/login" class="form_link">Already have an account? Login</a>
    </p>
    <p class="form_text">
        <a href="/chef-signup" class="form_link">Sign up as chef instead</a>
    </p>
</div>

<script src="/js/foodieSignup.js"></script>